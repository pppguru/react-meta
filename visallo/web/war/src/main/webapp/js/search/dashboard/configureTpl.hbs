<section>
  <label>Search</label>
  <select class="search">
    {{#if loading}}
      <option value="">{{ i18n 'dashboard.savedsearches.loading' }}</option>
    {{else}}
      {{#if searches }}
        <option value="">{{ i18n 'dashboard.savedsearches.choose' }}</option>
      {{else}}
        <option value="">{{ i18n 'dashboard.savedsearches.none' }}</option>
      {{/if}}

      {{#each searches}}
        <option value="{{ id }}" {{#if selected}}selected{{/if}}>{{ name }}</option>
      {{/each}}
    {{/if}}
  </select>
</section>

<section class="aggregation" style="display:none; margin-bottom: 1em;"></section>

<section class="sort" style="display:none">
  <label>{{ i18n 'dashboard.savedsearches.sort' }}</label>
  <div class="sort-fields"></div>
</section>

<section class="limit" style="display:none">
  <label>{{ i18n 'dashboard.savedsearches.limit' }}</label>
  <select>
    {{#each limits}}
    <option value="{{ value }}" {{#if selected}}selected{{/if}}>{{ name }}</option>
    {{/each}}
  </select>
</section>

