{{#if displayTime}}
  <div class="input-append dateField">
    <input type="text"
      data-provide="datepicker"
      placeholder="{{today}}"
      value="{{dateString}}"
      pattern="\d{4}-\d+-\d+"
      required="required" 
      class="date">
    <input type="text"
      placeholder="{{todayTime}}"
      pattern="\d+:\d+"
      required="required" 
      class="timepicker">
    <span class="add-on timezone"></span>
  </div>
{{else}}
  <input data-provide="datepicker" placeholder="{{today}}" 
    value="{{dateString}}" type="text" pattern="\d{4}-\d+-\d+"></input>
{{/if}}
